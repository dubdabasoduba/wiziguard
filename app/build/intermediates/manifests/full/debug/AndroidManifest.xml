<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amisa.wiziguard"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="9" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="WiziGuard"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <uses-sdk
            android:minSdkVersion="15"
            android:targetSdkVersion="24" />

        <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
        <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

        <activity android:name="com.example.amisa.wiziguard.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.amisa.wiziguard.register"
            android:label="SIGN UP" >
            <intent-filter>
                <action android:name="com.example.amisa.wiziguard.register" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.amisa.wiziguard.login"
            android:label="LOGIN" >
            <intent-filter>
                <action android:name="com.example.amisa.wiziguard.login" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.amisa.wiziguard.location"
            android:label="LOCATION" >
            <intent-filter>
                <action android:name="com.example.amisa.wiziguard.location" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>